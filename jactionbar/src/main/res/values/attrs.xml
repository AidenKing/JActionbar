<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--JActionbar-->
    <declare-styleable name="JActionbar">
        <attr name="android:background"/>
        <attr name="title" format="string" />
        <attr name="showIconBack" format="boolean" />
        <attr name="rippleColor" format="color" />
        <attr name="supportSearch" format="boolean" />
        <attr name="titleSize" format="dimension" />
        <attr name="titleColor" format="color" />
        <attr name="actionTextColor" format="color" />
        <attr name="iconSize" format="dimension" />
        <attr name="iconColor" format="color" />
        <attr name="iconPadding" format="dimension" />
        <attr name="menu" format="reference" />
        <attr name="maxShowIcon" format="integer" />
        <attr name="popupMenuWidth" format="dimension" />
    </declare-styleable>

    <!--JActionbar 从MenuItem复制部分-->
    <declare-styleable name="JMenuItem">
        <attr name="android:id"/>
        <attr name="android:title"/>
        <attr name="android:icon"/>
        <attr name="android:checkable"/>
        <attr name="android:checked"/>
        <attr name="android:visible"/>
        <attr name="android:enabled"/>
        <attr name="android:onClick"/>
        <!--gradle-wrapper 4.6 or build gradle:3.2.1 开始下面的定义与系统冲突，不能再包含在该属性集里，java代码里另写其他代码解析-->
